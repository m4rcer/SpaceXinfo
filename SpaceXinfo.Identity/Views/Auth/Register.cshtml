@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href=@Url.Content("~/styles/app.css")>
    <title>Sign Up</title>
</head>
<body>
    <main>
        <div class="circle"></div>
        <div class="register-form-container">
            <form asp-action="Register" asp-controller="Auth" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <h1 class="form-title">
                    Sign Up
                </h1>
                <div class="form-fields">
                    <div class="form-field">
                        <input placeholder="Nickname" required asp-for="Username">
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-field">
                        <input asp-for="Password" placeholder="Password" required minlength="8" maxlength="24">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-field">
                        <input asp-for="ConfirmPassword" placeholder="Confirm password" required minlength="8" maxlength="24">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                <div class="form-buttons">
                    <button class="button" type="submit">Sign Up</button>
                    <div class="divider">or</div>
                    <a class="button button-bottom"
                       asp-controller="Auth" asp-action="Login"
                       asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
                </div>
            </form>
        </div>
    </main>
</body>
</html>